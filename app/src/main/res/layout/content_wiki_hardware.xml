<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_wiki_hardware" tools:context="com.daavm.nextbit.wikiHardware">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hardware Info"
                android:id="@+id/textView1"
                android:textSize="34dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\nCPU &amp; GPU"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nextbit Robin is powered by a Qualcomm® Snapdragon™ 808 CPU, and a Qualcomm® Adreno™ 418 GPU"
                android:id="@+id/textView3"
                android:textIsSelectable="true"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\nMEMORY"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CPU is accompained by 3GB of RAM. Robin has 32gb of offline memory, and each Robin user has 100gb of Cloud storage"
                android:id="@+id/textView5"
                android:textIsSelectable="true"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\nSCREEN &amp; BATTERY"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Robin has a 5.2 IPS LCD FHD (1080p) screen, with Gorilla Glass protection and a 2680mAh battery with Quealcomm QuickCharge 2.0"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textIsSelectable="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\nSENSORS"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Robin has a 13MP rear-facing camera, with phase detection autofocus and dual tone flash. For the selfies, we have a 5MP camera in the front-facing\nThe phone has a fingerprint scanner integrated in the power button. Also, Robin has Bluetooth 4.0 LE, NFC, and supports WiFi A/B/G/N/AC"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true"
                android:layout_marginTop="12dp"
                android:textAlignment="center"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>