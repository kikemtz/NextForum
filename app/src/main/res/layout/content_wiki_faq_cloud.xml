<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_wiki_faq_cloud" tools:context="com.daavm.nextbit.wikiFAQ_Cloud">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Will uploads/downloads to/from the cloud drain my battery or data plan?'"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="14dp"
                android:id="@+id/textView1"
                android:layout_below="@+id/textView"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="No if you don't want it to. By default, Robin is configured to only back up data and less used apps when you are plugged into a power source and connected to WiFi.
Robin is prepared to not to consume extra battery and data, but you can change Online storage settings depending on your needs."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView1"
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Is Nextbit using their own data center to hold the 100gb of cloud storage?'"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/imageView"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="No, they are using Amazon Web Services (AWS) to provide 100gb cloud storage with every Robin."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView3"
                android:id="@+id/textView4"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Can I use my own machine for my cloud?'"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView4"
                android:id="@+id/textView5"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="They can't promise anything yet, but it is something they are doing very early investigations of. Their goal is to use the cloud to let you exceed all of the specs of your device, it doesn't have to be their cloud! (Seen in reddit AMA)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView5"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'What about cloud security?'"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView6"
                android:id="@+id/textView7"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="Google Auth is used for your login in Nextbit cloud, so your password will be never stored, and it offers two-factor authentication too"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView7"
                android:id="@+id/textView8"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Will the cloud integration 'play nice' with the other ROMs?'"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView8"
                android:id="@+id/textView9"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="As when you load a ROM it wipes the system, Nextbit's SW is no longer on it. Robin's cloud features will only work with the ROM that ships on the device."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView9"
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Is the 100GB cloud storage tied to the phone or an account? Also what happens if someone else is using the phone. Does that mean I lose my cloud storage and they get it?'"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView10"
                android:id="@+id/textView11"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="Your cloud storage is tied to your Google account. If someone else uses the phone, they'll need to sign up for a new account and get cloud storage for that account."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView11"
                android:id="@+id/textView12"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'What about if I want to increase my Cloud capacity? Am I able to do it, like paying for more or something?'"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView12"
                android:id="@+id/textView13"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="Now no, you can't, but, as said by Tom on reddit's AMA, if there's a majority of users who ask about it, it will be probably included"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/textView13"
                android:id="@+id/textView14"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cloud_animation"
                android:id="@+id/imageView"
                android:layout_below="@+id/textView2"
                android:adjustViewBounds="true"
                android:layout_marginTop="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nextbit Cloud Questions"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="26dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>